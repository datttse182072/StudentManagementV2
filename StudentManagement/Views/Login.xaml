<Window x:Class="StudentManagement.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentManagement.Views"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800" Background="AliceBlue">
    <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="20" 
        Background="White" Padding="5">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.5"/>
        </Border.Effect>
        <Grid Width="350" Height="300" Background="White">
        </Grid>
    </Border>
</Window>
